<style>
 #product {
  width: 100%;
  height: 100%;
  min-height: 100vh;
 }
</style>

<div id="product">
</div>

<script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "Product",
      "description": "{{ product.description }}",
      "name": "{{ product.title }}",
      "image": "{{ product.featured_image }}",
      "offers": {
        "@type": "Offer",
        "availability": "https://schema.org/InStock",
        "price": "{{ product.price }}",
        "priceCurrency": "USD"
      }
    }
</script>
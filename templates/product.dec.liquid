<style>
 #product {
  --bg-white: white;
  --bg-gray: #f3f3f3;
  --bg-pink: #f9ede8;
  --bg-button: #ed0835;
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  align-content: center;
  justify-content: flex-start;
  align-items: center;
  width: 100%;
  height: 100%;
  min-height: 100vh;
  margin-top: 70px;
  background-color: var(--bg-white);
 }
 #product div {
  background-color: var(--bg-white);
  padding: 0;
  margin: 0;
 }
 #product img {
  width: 100%;
  height: 100%;
 }
 #product button {
  background-color: var(--bg-button);
  border: none;
  outline: none;
  margin: 0;
  padding: 20px;
  text-transform: uppercase;
 }
 #product .first_fold {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  align-items: center;
 }
 #product .first_fold > div {
  flex: 1;
 }
 #product .first_fold .product_description_c {
  padding-top: 20px;
 }
 #product .first_fold .product_description {
  padding-left: 20px;
 }
 #product h1 {
  font-size: 20px;
  font-weight: 200;
  text-transform: uppercase;
 }
</style>

<div id="product">
  <div class="first_fold">
    <div class="product_image">
      <img loading="lazy" height width src="{{ product.featured_image | img_url: '800x' }}" >
    </div>
    <div class="product_description_c">
      <div class="product_description">
        <h1>{{ product.title }}</h1>
        <h2>Stop bloat in its tracks.</h2>
        <p>
          Take Confidence with your meal to avoid bloating, stomach pains, indigestion, constipation, & awkward gas. Get Confidence delivered monthly so youâ€™re never without it. 
        </p>
        <ul class="product_description_list">
          <li>90 pills = 30(ish) day supply</li>
         <li>Subscribe to save 15% per month</li>
         <li>Free shipping</li>
          <li>Cancel anytime</li>
        </ul>
        <button>subscribe - $76.50/mo <strike>$90</strike></button>
      </div>
    </div>
  </div>
</div>

<script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "Product",
      "description": "{{ product.description }}",
      "name": "{{ product.title }}",
      "image": "{{ product.featured_image }}",
      "offers": {
        "@type": "Offer",
        "availability": "https://schema.org/InStock",
        "price": "{{ product.price }}",
        "priceCurrency": "USD"
      }
    }
</script>
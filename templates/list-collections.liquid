<style>
  #collections-listing #shop_wrapper{
  	width: 90%;
    max-width: 1200px;
    margin: auto;
    padding: 5em 0;
  }
</style>
<div id="collections-listing" class="secondary">
  <div id="shop_wrapper">
  {% paginate collections by 20 %}

    {% if collections.size > 0 %}

  	<h2>Our Collections</h2>

    <ul class="shop_list">
      {% for collection in collections %}
        <li class="{{ collection.handle }}-collection">
          <a href="{{ collection.url }}">
            <img loading="lazy" height="" width="" src="{{ collection.image | img_url: '300x'}}">
        	<h3>{{ collection.title | escape }}</h3>
          </a>
        </li>
      {% endfor %}
    </ul>

    <div id="pagination">{{ paginate | default_pagination }}</div>

    {% else %}
      <p>No Collections available.</p>
    {% endif %}
  {% endpaginate %}
</div>


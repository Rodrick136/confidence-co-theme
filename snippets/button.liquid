{% style %}
div.button > * {
  padding: 0;
  margin: 0;
}
div.button {
  background-color: #ed0835;
  margin: 0;
  padding: 20px;
  width: fit-content;
  min-width: 200px;
  text-align: center;
}
div.button p {
  text-transform: uppercase;
  color: white;
  font-size: 16px;
  font-weight: 200;
  letter-spacing: 1px;
  text-decoration: none;
}
a.button {
  margin: 0 auto;
  text-decoration: none;
  color: white;
}
{% endstyle %}
<a class="button" href="#">
  <div class="button">
    <p>{{- btn_text -}}</p>
  </div>
</a>

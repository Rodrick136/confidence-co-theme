<style>
  .slick-track{
  	display: flex;
  	align-items: center;
  }
  #home___slider h2, #home___slider p{
    text-align: center;
    max-width: 800px;
    margin: auto;
  }
  .slide{
  	display: flex !important;
    align-items: center;
    padding: 3em;
  }
  #home___slider .slide .text-content h2{
  	text-align: left;
    max-width: 90%;
    margin-bottom: 20px;
  }
  #home___slider .slide .text-content p{
  	margin-bottom: 1em;
    text-align: left;
    max-width: 90%;
  }
  #home___slider video{
  	width: 25%;
    box-shadow: 3px 3px 15px 0px rgba(0,0,0,0.3);
  }
  
  #home___slider button.slick-prev:before{
  	content: "‹";
    font-size: 60px;
    color: #ED0835;
  }
  #home___slider button.slick-next:before{
  	content: "›";
    font-size: 60px;
    color: #ED0835;
  }
  #home___slider .btn_c{
  	text-align: center;
  }
  @media only screen and (max-width: 750px) {
    .slider{
    	margin-top: 5em;
    }
    
    .slide {
      display: block !important;
      padding: 0;
    }
    .slide img{
      max-width: 100%;
      margin-bottom: 3em;
    }
    #home___slider .slide .text-content p{
    	text-align: center;
    }
  }
</style>

<div id="home___slider" class="section {% if section.settings.text-block-style == "primary" %}primary{% else %}secondary{%endif%}">
  <div class="page-container">
    <h2 class="{% if section.settings.alternate-header == true %}alternate{% endif %}">{{ section.settings.title }}</h2>
    <p>{{ section.settings.sub-title }}</p>
    <div class="slider">
      {% for block in section.blocks %}
        <div class="slide">
          {% if block.settings.image %}
          <img alt="{{block.settings.alt}}" src="{{ block.settings.image | img_url: '400x' }}">
          {% endif %}
          {% if block.settings.video %}
          	<video controls>
              <source src="{{block.settings.video}}" type="video/mp4">
              Your browser does not support the video tag.
            </video>
          {% endif %}
          <div class="text-content">
            <h2>{{ block.settings.title }}</h2>
            {{ block.settings.text }}
          </div>
        </div>
      {% endfor %}
    </div>
    {% if section.settings.btn_text != blank %}
      <div class="btn_c">
        {% if section.settings.btn_text != blank %}
          <a class="btn" href="{{- section.settings.btn_url -}}">{{- section.settings.btn_text -}}</a>
        {% endif %}
      </div>
    {% endif %}
  </div>
</div>

<script>
$(document).ready(function(){
  $('.slider').slick({
  	autoplay: true,
  	autoplaySpeed: 4000,
  });
});
</script>


{% schema %}
  {
    "name": "Slider",
    "settings": [
		{
       "type": "select",
       "id": "text-block-style",
       "label": "Style",
       "options": [
         {
           "value": "primary",
           "label": "Primary"
         },
         {
           "value": "secondary",
           "label": "Secondary"
         }
       ],
       "default": "primary"
    },
		{
            "id": "title",
            "type": "text",
            "label": "Header"
          },
          {
             "type": "checkbox",
             "id": "alternate-header",
             "label": "Enable Alternative Header Color"
          },
		  {
            "id": "sub-title",
            "type": "text",
            "label": "Sub Header"
          },
          {
              "type": "text",
              "id": "btn_text",
              "label": "Button Text",
              "default": "SHOP NOW"
          },
          {
              "type": "url",
              "id": "btn_url",
              "label": "Button Url",
              "default": "/collections/all"
          }
	],
	"blocks": [
      {
        "type": "content",
        "name": "Slides",
        "settings": [
          
		  {
			"id": "title",
            "type": "text",
            "label": "Header"
		  },
		  {
			"id": "text",
            "type": "richtext",
            "label": "Content"
		  },
		  {
			"id": "image",
            "type": "image_picker",
            "label": "Image"
		  },
		  {
			"id": "alt",
            "type": "text",
            "label": "Image Alt Text"
		  },
		  {
			"id": "video",
            "type": "text",
            "label": "Video URL"
		  }
        ]
      }
    ],
	"presets": [
      {
      "name": "Slider",
      "category": "Text"
      }
      ]
  }
{% endschema %}

